<div class="col mb-4">
  {% comment %} <a href="{% if project.redirect %}{{ project.redirect }}{% else %}{{ project.url | relative_url }}{% endif %}"> {% endcomment %}
  <div class="card h-100 hoverable">
    <div class="row no-gutters">
      {% if project.img %}
        <div class="col-md-6">
          {% include figure.liquid loading="eager" path=project.img sizes="(min-width: 768px) 156px, 50vw" alt="project thumbnail" class="card-img" %}
        </div>
      {% endif %}
      <div class="{% if project.img %}col-md-6{% else %}col-md-12{% endif %}">
        <div class="card-body">
          <h3 class="card-title">{{ project.title }}</h3>
          <span class="badge font-weight-bold {{ project.color }} text-uppercase align-middle" style="min-width: 75px"> {{ project.language }} </span>
          <p class="card-text">{{ project.description }}</p>
          <div class="row ml-1 mr-1 p-0">
            {% if project.github %}
              <div class="github-icon">
                <div class="icon" data-toggle="tooltip" title="Code Repository">
                  <a href="{{ project.github }}"><i class="fa-brands fa-github gh-icon"></i></a>
                </div>
              </div>
            {% endif %}
            {% if project.writeup %}
              <div class="icon" data-toggle="tooltip" title="Writeup">
                <a target="_blank" rel="noopener noreferrer" href="{{ project.writeup | prepend: 'assets/pdf/' | relative_url}}"
                  ><i class="fa-solid fa-file-pdf"></i
                ></a>
              </div>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
  {% comment %} </a> {% endcomment %}
</div>
